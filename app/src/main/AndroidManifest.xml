<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zizi.rendezvous">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".ClassGlobalApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_rendezvous"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_rendezvous_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.myDarkTheme">
        <activity android:name=".Activity.ActivityPay"></activity>
        <activity android:name=".ActivityForTest" />
        <activity
            android:name=".ActivityLogin"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityMeetings"
            android:screenOrientation="portrait"></activity>
        <!--
        <intent-filter>
            <action android:name="Open_ActivityMeetings" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        -->
        <!-- Сервис для уведомлений -->
        <service
            android:name=".ServiceFirebaseCloudMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>