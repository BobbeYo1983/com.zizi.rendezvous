<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zizi.rendezvous">



    <uses-permission android:name="android.permission.VIBRATE" />



    <application
        android:name=".GlobalApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.myDarkTheme">



        <activity
            android:name=".Activity.ActivityPay"
            android:windowSoftInputMode="adjustPan"
            />



        <activity android:name=".Activity.ActivityForTest" />



        <activity
            android:name=".Activity.ActivityLogin"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            >



            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>



        </activity>



        <activity
            android:name=".Activity.ActivityMeetings"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            />
        <!--
        <intent-filter>
            <action android:name="Open_ActivityMeetings" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        -->
        <!-- Сервис для уведомлений -->
        <service
            android:name=".Services.ServiceFirebaseCloudMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>



    </application>



</manifest>